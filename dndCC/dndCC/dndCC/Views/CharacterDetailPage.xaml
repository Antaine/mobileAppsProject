<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dndCC.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Character Name:" FontSize="Medium" />
        <Label Text="{Binding Character.Name}" FontSize="Small"/>
        <Label Text="Character Race:" FontSize="Medium" />
        <Label Text="{Binding Character.Race}" FontSize="Small"/>
        <Label Text="Character Class:" FontSize="Medium" />
        <Label Text="{Binding Character.Class}" FontSize="Small"/>
        <Label Text="Character Background:" FontSize="Medium" />
        <Label Text="{Binding Character.Bg}" FontSize="Small"/>
        <Label Text="Character Alignment:" FontSize="Medium" />
        <Label Text="{Binding Character.Align}" FontSize="Small"/>
        <Label Text="Level:" FontSize="Medium" />
        <Label Text="{Binding Character.Lvl}" FontSize="Small"/>
        <Button Text="Edit Stats" Clicked="statsClicked"/>
    </StackLayout>
</ContentPage>